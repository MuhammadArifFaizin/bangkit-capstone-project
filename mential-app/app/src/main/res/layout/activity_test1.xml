<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test1Activity">

    <ImageView
        android:id="@+id/bckg_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/question_box1"
        android:contentDescription="@string/desc_img" />

    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/question1"
        android:textColor="@color/dark_grey"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bckg_question1"
        app:layout_constraintEnd_toEndOf="@+id/bckg_question1"
        app:layout_constraintStart_toStartOf="@+id/bckg_question1"
        app:layout_constraintTop_toTopOf="@+id/bckg_question1" />

    <ImageView
        android:id="@+id/bckg_btn1"
        android:layout_width="302dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_test1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bckg_question1"
        app:srcCompat="@drawable/shape_rc20_rectangle_coral_soft"
        android:contentDescription="@string/desc_img" />

    <Button
        android:id="@+id/recordButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:onClick="recordAudio"
        android:background="@drawable/shape_circle_white"
        app:layout_constraintBottom_toBottomOf="@+id/bckg_btn1"
        app:layout_constraintStart_toStartOf="@+id/bckg_btn1"
        app:layout_constraintTop_toTopOf="@+id/bckg_btn1" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="stopAudio"
        android:background="@drawable/stop"
        app:layout_constraintBottom_toBottomOf="@+id/bckg_btn1"
        app:layout_constraintEnd_toEndOf="@+id/bckg_btn1"
        app:layout_constraintStart_toStartOf="@+id/bckg_btn1"
        app:layout_constraintTop_toTopOf="@+id/bckg_btn1" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/play"
        android:onClick="playAudio"
        app:layout_constraintBottom_toBottomOf="@+id/bckg_btn1"
        app:layout_constraintEnd_toEndOf="@+id/bckg_btn1"
        app:layout_constraintTop_toTopOf="@+id/bckg_btn1" />

    <Button
        android:id="@+id/btn_start_test1"
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/shape_rectangle_purple"
        android:text="@string/btn_start"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>