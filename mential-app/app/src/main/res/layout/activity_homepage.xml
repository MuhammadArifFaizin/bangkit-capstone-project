<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageActivity">

    <TextView
        android:id="@+id/tv_hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/hi"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text=" "
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_hi"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bckg"
        android:layout_width="340dp"
        android:layout_height="195dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape_rc12_rectangle_coral_soft" />

    <TextView
        android:layout_width="340dp"
        android:layout_height="195dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:text="@string/test"
        android:textAlignment="center"
        android:paddingTop="40dp"
        android:textColor="@color/dark_grey"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_homepage"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_rectangle_coral"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/btn_start"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/bckg"
        app:layout_constraintEnd_toEndOf="@+id/bckg"
        app:layout_constraintStart_toStartOf="@+id/bckg" />

</androidx.constraintlayout.widget.ConstraintLayout>